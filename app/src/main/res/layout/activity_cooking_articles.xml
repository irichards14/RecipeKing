<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="recipeking.uw.tacoma.edu.recipeking.CookingArticlesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="26sp"
                android:text="Articles"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/cooking_article_1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/article1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openArticle"/>

            <ImageView
                android:id="@+id/cooking_article_2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/article2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openArticle"/>

            <ImageView
                android:id="@+id/cooking_article_3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/article3"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openArticle"/>

            <ImageView
                android:id="@+id/cooking_article_4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/article4"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openArticle"/>

            <ImageView
                android:id="@+id/cooking_article_5"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/article5"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openArticle"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
