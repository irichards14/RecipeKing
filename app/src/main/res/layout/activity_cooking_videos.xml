<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="recipeking.uw.tacoma.edu.recipeking.CookingArticlesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="26sp"
                android:text="Videos"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/cooking_video_1"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/video1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openVideo"/>

            <ImageView
                android:id="@+id/cooking_video_2"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/video2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openVideo"/>

            <ImageView
                android:id="@+id/cooking_video_3"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/video3"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openVideo"/>

            <ImageView
                android:id="@+id/cooking_video_4"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/video4"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openVideo"/>

            <ImageView
                android:id="@+id/cooking_video_5"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/video5"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:onClick="openVideo"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
